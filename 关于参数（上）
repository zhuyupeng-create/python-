#判断年份是否属于闰年
def is_leap(year):
    leap = False
    print(f'{year}不是闰年')
    if year % 4 == 0:
        leap = True
        print(f'{year}是闰年')
        if year % 100 == 0 and year % 400 != 0:
            leap = False
    return  leap

year = int(input('输入'))
print(is_leap(year))
#判断年份是否属于闰年
def is_leap(year):
    return year % 4 == 0 and (year % 100 != 0 and year % 400 != 0)

year = int(input('输入'))
print(is_leap(year))
